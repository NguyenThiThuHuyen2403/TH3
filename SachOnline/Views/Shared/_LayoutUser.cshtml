<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <style type="text/css">

        .imgbook {
            transition: all 1s ease-in;
            width: 200px;
        }
        .imgbook:hover {
            transform: scale(0.9);
            cursor: pointer;
        }
        body {
            display: flex;
            flex-direction: column;
        }
        .list-group {
            min-width: 250px;
            margin: 10px;
        }
        .book-info {
            display: flex;
            align-items: center;
            padding: 10px;
            margin: 20px;
        }
        .book-info div {
            flex: 1; 
        }
        #Con {
            display: flex;
            flex-direction: row;
            padding: 1px;

        }
        .Con-book {
            display: grid;
            grid-template-columns: 1fr 1fr;
        }
        .book-info > img {
            width: 150px;
            height: 200px;
            margin: 5px;
        }
        .imgsachbannhieu {
            width: 100px;
        }
        .tensach {
            color: red;
            text-align: center;
            background-image: linear-gradient(blue, white);
        }
        
    </style>

    <title>@ViewBag.Title</title>
</head>
<body>

    <div class="col-lg-9 col-md-9 col-sm-9 col-xs-12" id="Con">
        <div>
            @Html.Action("ChuDePartial", "SachOnline")
            @Html.Action("NhaXuatBanPartial", "SachOnline")

        </div>
        <div>@RenderBody()</div> 
    </div>
    
        @RenderSection("SachBanNhieu", required: false)
    
</body>
</html>
